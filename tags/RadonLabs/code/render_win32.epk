begintarget render_nidls_win32
    settype lib
    setbasedir render
    setnidlclusters {
        asyncgraphics
    }
endtarget

begintarget render_win32
    settype lib
    setbasedir render
    setprecompiledheader stdneb
    setincpath_win32 "../foundation;../extlibs;../render;../addons;../addons/nebula2;../addons/nebula2/character;../addons/nebula2/anim;"
    setdepends {
        render_nidls_win32
    }
    setclusters {
        apprender
        coregraphics coregraphics/base coregraphics/win32 coregraphics/d3d9 coregraphics/legacy coregraphics/debug
        input input/base input/win32 input/xinput
        models models/load models/save models/nodes
        preshaders
        frame
        resources
        graphics
        lighting lighting/base lighting/sm30
        renderutil
        asyncgraphics
    }
endtarget            
